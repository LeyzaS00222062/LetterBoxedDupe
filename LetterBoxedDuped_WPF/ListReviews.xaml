<Page x:Class="LetterBoxedDuped_WPF.ListReviews"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LetterBoxedDuped_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListReviews">

    <StackPanel Margin="10">
        <TextBlock Text="Saved Reviews" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListBox x:Name="ReviewsListBx" Height="350" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="5">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding DateCreated}" FontStyle="Italic"/>
                            <TextBlock Text="{Binding Review}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Content="Back" Click="Backbtn_Click" Width="100" Margin="0,10,0,0"/>
    </StackPanel>
</Page>


