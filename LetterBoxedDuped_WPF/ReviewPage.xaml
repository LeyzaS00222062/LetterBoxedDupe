<Page x:Class="LetterBoxedDuped_WPF.ReviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LetterBoxedDuped_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReviewPage">

    <StackPanel Margin="20">
        <TextBlock x:Name="MovieTitleBlck" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" />
        <TextBox x:Name="ReviewTextBx" Height="150" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,0,0,10"/>
        <Button  Content="Save Review" Click="SaveReview_Click" Width="120" Margin="0,0,0,10"/>
        <Button Content="Back" Click="BackBtn_Click" Width="100" Margin="0,0,0,10"/>
    </StackPanel>
</Page>
