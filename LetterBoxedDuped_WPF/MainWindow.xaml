<Window x:Class="LetterBoxedDuped_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LetterBoxedDuped_WPF"
        mc:Ignorable="d"
        Title="LetterBoxedDupe" Height="400" Width="800">
    <Grid>
        <Grid x:Name="MainGrid" Visibility="Visible" Margin="10">
        <StackPanel>
            <Image Source="/Assets/letterboxedlogo.ico" Height="100" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <TextBox x:Name="SearchBx" Width="300" Height="30" Margin="5" Text="Enter Movie Title here..." />
            <Button Content="Search" Click="SearchBtn_Click" Width="100" Margin="0,0,0,10"/>

            <Image x:Name="PosterImage" Height="200" Stretch="Uniform" Margin="0,0,0,10"/>

            <TextBlock x:Name="TitleBlock" FontWeight="Bold" FontSize="16" />
            <TextBlock x:Name="YearBlock"/>
            <TextBlock x:Name="GenreBlock"/>
            <TextBlock x:Name="PlotBlock" TextWrapping="Wrap" Margin="0,5"/>
            <TextBlock x:Name="RatingBlock" FontWeight="Bold" Margin="0,5"/>

            <ScrollViewer Height="120" HorizontalScrollBarVisibility="Auto" Margin="0,10">
                <ItemsControl x:Name="ImageGallery">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Width="200" Height="112" Margin="5" Stretch="UniformToFill"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Button Content="Review" Click="ToReviewPage_Click" Width="150" Margin="0,10"/>
                <Button Content="List Reviews" Click="ToListReviews_Click" Width="150" Margin="0,10"/>
            </StackPanel>
        </Grid>
        <Frame x:Name="ReviewFrame" Visibility="Collapsed" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
