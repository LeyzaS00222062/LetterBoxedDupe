<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LetterBoxedDupe.MoviePage"
             Title="Movie Page"
             BackgroundColor="LightGoldenrodYellow">
    <ScrollView>

        <StackLayout
         Padding="30,0"
         Spacing="25">
            <Image
             Source="letterboxedlogo.png"
             HeightRequest="150"
             Aspect="AspectFit"
             SemanticProperties.Description="picture of film camera" 
             />
            <Label
             Text="LetterXDupe"
             TextColor="PaleVioletRed"
             Style="{StaticResource Headline}"
             SemanticProperties.HeadingLevel="Level1" />


            <Image x:Name="MoviePoster" HeightRequest="300"/>
            <Label x:Name="MovieTitle" FontSize="24" FontAttributes="Bold"/>
            <Label x:Name="MovieYear" FontSize="16" TextColor="Gray"/>
            <Label x:Name="MovieDescription" FontSize="14"/>
            <Button Text="Write a Review" Clicked="OnWriteReview"/>
        </StackLayout>
    </ScrollView>
</ContentPage>